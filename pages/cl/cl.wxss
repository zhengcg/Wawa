/* pages/cl/cl.wxss */
.main{
  display: -webkit-flex; /* Safari */
  display: flex;
}
.nav{
  width: 212rpx;
  background: #F6F8FC;
  box-sizing: border-box;

}
.nav>view{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid #E5E5E5;
  font-size: 28rpx;
  color: #111111;
}
.nav>view.cur{
  background: #fff;
  color: #18BAFF;
}
.content{
  padding: 0 30rpx;
  overflow: auto;
}
.content>navigator{
  font-size: 28rpx; 
   height: 85rpx;
  line-height: 85rpx;
  text-align: right;
  padding-right: 40rpx;
  color: #FF5B5B;
  border-bottom: 1rpx solid #E5E5E5;
  background: url("data:image/png;base64,") no-repeat right center;
  background-size: 24rpx 24rpx;

}
.content>navigator text{
  display: inline-block;
  width: 430rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
  text-align: left;
  float: left;
}