    <view class='body'>
       <view wx:for="{{item.imgs}}" wx:key="{{index}}" wx:for-item="itemName" class='imgBoxYY'>
        <image src='{{itemName}}' bindtap='previewImg' data-url='{{itemName}}' data-id="{{item.id}}"/>
      </view> 
    </view>
   </block>
  </scroll-view>
</view>
</view>
